@model IEnumerable<ShoppingList.Models.GroceryItem>

@{
    ViewData["Title"] = "Indkøbsliste";
}

<h1>Indkøbsliste</h1>

<table class="table">
    <thead>
        <tr>
            <th>Navn</th>
            <th>Antal</th>
            <th>Afdeling</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Amount</td>
                <td>@item.Location</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id">Slet</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Tilføj vare</a>